@model UserModel

<header class=" py-5 mb-3 w-100">
</header>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg mt-5">
                <div class="card-header text-bg-primary">Login to continue</div>
                <div class="card-body">
                    <form action="/user/login" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="user_name" placeholder="johndoe" name="userName" autofocus required />
                            <label for="user_name">Username</label>
                            @if (Model != null)
                            {
                                @Html.ValidationMessageFor(Model => Model.UserName);
                            }
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="pass_word" placeholder="****" name="password" required />
                            <label for="pass_word">Password</label>
                            @if (Model != null)
                            {
                                @Html.ValidationMessageFor(Model => Model.Password);
                            }
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z" />
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                                </svg>
                                Login to Continue
                            </button>
                        </div>
                        <a class="btn-sm btn-primary mt-3 align-middle text-decoration-none" href="register">
                            Register
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class=" py-5 mb-3 w-100">
</footer>